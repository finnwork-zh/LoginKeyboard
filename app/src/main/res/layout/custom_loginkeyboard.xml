<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_1"
            style="@style/NumKeyboard"
            android:text="1" />

        <TextView
            android:id="@+id/tv_num_2"
            style="@style/NumKeyboard"
            android:text="2" />

        <TextView
            android:id="@+id/tv_num_3"
            style="@style/NumKeyboard"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_4"
            style="@style/NumKeyboard"
            android:text="4" />

        <TextView
            android:id="@+id/tv_num_5"
            style="@style/NumKeyboard"
            android:text="5" />

        <TextView
            android:id="@+id/tv_num_6"
            style="@style/NumKeyboard"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_7"
            style="@style/NumKeyboard"
            android:text="7" />

        <TextView
            android:id="@+id/tv_num_8"
            style="@style/NumKeyboard"
            android:text="8" />

        <TextView
            android:id="@+id/tv_num_9"
            style="@style/NumKeyboard"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_point"
            style="@style/NumKeyboard"
            android:textStyle="bold"
            android:text="." />

        <TextView
            android:id="@+id/tv_num_0"
            style="@style/NumKeyboard"
            android:text="0" />

        <ImageView
            android:id="@+id/iv_num_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_keyboard"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:src="@mipmap/keyboard_del"/>
    </LinearLayout>
</LinearLayout>